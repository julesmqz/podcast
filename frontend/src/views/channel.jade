#channel
	.page-header
		h1 Tu Canal
	.page-header
		h2 Información General
	.well.bs-component
		form.form-horizontal
			fieldset
				legend {{channel._info.title}}
				.flex-row
					.flex50
						.image-uploader(ngf-select,ngf-resize="{width: 150, height: 150}",ngf-change="channel.checkImage()",ng-model="channel.info.image",name="channelImage",style="text-align:center;color:#CCC;cursor:pointer;")
							.mdi-image-image(style="font-size:200px;",ng-if="!channel.info.image && !channel.cover")
							img(ngf-src="channel.info.image",ng-if="channel.info.image && !channel.cover")
							img(ng-src="{{channel.cover}}",ng-if="channel.cover")
							//- image
							p Change Image
					.flex
						.form-group
							label.col-lg-2 Título
							.col-lg-10
								input.form-control(type="text",placeholder="Título",ng-model="channel.info.title")
						.form-group
							label.col-lg-2 Subtítulo
							.col-lg-10
								input.form-control(type="text",placeholder="Subtítulo",ng-model="channel.info.subtitle")
						.form-group
							label.col-lg-2 Descripción
							.col-lg-10
								input.form-control(type="text",placeholder="Descripción",ng-model="channel.info.description")
						.form-group
							label.col-lg-2 Autor
							.col-lg-10
								input.form-control(type="text",placeholder="Autor",ng-model="channel.info.author")
						.form-group
							label.col-lg-2 Email del Autor
							.col-lg-10
								input.form-control(type="text",placeholder="Email de Autor",ng-model="channel.info.author_email")
						.form-group
							label.col-lg-2 Lenguaje
							.col-lg-10
								select.form-control(placeholder="Lenguaje",ng-model="channel.info.language")
									option(value="en/us") en/us
									option(value="es/mx") es/mx
						.form-group
							label.col-lg-2 Copyright
							.col-lg-10
								input.form-control(type="text",placeholder="Copyright",ng-model="channel.info.copyright")
						.form-group
							label.col-lg-2 Contenido Explícito
							.col-lg-10
								select.form-control(placeholder="Contenido Explícito",ng-model="channel.info.explicit")
									option(value="yes") Si
									option(value="no") No
				
				button.btn.btn-primary.pull-right(ng-click="channel.update()",ng-if="!channel.updating") Guardar
				button.btn.btn-primary.pull-right(ng-if="channel.updating") Guardando
				button.btn.pull-right(ng-click="channel.reset()") Reestablecer
				.clearfix
				//- p {{channel.updateProgress}}
				.progress.progress-striped(ng-show="channel.updateProgress >= 0")
					.progress-bar.progress-bar-info(style="width: {{channel.updateProgress}}%")
		.alert.alert-danger(ng-if="channel.errors")
			.pull-left.mdi-alert-error 
			div {{channel.errors}}
	.page-header.flex-row
		h2.flex80 Episodios
		.flex20 
			button.btn.pull-right(ng-click="channel.addEpisode()")
				.mdi-content-add-box
				| &nbsp; Añadir Episodio
	table-player(songs="channel.episodes",open="channel.openEpisode(id)")
